-- Load the library from GitHub
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/user/repo/main/PastedSolutionsLibrary.lua"))()

if not Library then
    warn("Failed to load the library.")
    return
end

-- Example of how to use the now-loaded library
local Window = Library:Window({Name = "Pasted.Solutions"})
local Combat = Window:Tab({Name = "Combat"})
local Rage = Window:Tab({Name = "Rage"})
local Visuals = Window:Tab({Name = "Visuals"})
local Misc = Window:Tab({Name = "Misc"})
local PlayersTab = Window:Tab({Name = "Players"})

--// combat Aimbot
local A = Combat:Section({Name = "Silent Aim", Side = "left"})
A:Toggle({Name = "Enabled", Flag = "silent_aim_enabled", Default = false})
A:Keybind({Name = "Toggle Key", Flag = "silent_aim_keybind"})
A:Textbox({Name = "Prediction", Flag = "silent_aim_prediction", Default = "0.0"})
A:Dropdown({Name = "Target Part", Flag = "silent_aim_bodypart", Options = {"Head", "HumanoidRootPart", "Torso", "Left Arm", "Right Arm", "Left Leg", "Right Leg"}, Default = "Head"})

--// combat triggerbot
local B = Combat:Section({Name = "TriggerBot", Side = "right"})
B:Toggle({Name = "TriggerBot", Flag = "Trigger_Bot", Default = false})
B:Textbox({Name = "Prediction", Flag = "TriggerBot_Prediction", Default = "0.0"})
B:Dropdown({Name = "Target Body Part", Flag = "TriggerBot_Bodyparts", Options = {"Head", "HumanoidRootPart", "Torso", "UpperTorso", "LowerTorso", "LeftLeg", "RightLeg", "LeftArm", "RightArm"}, Default = "Head"})

--// visuals
local FOVSection = Visuals:Section({Name = "FOV Settings", Side = "right"})
FOVSection:Toggle({Name = "Show FOV", Flag = "silent_aim_show_fov", Default = false})
FOVSection:Slider({Name = "FOV Radius", Flag = "silent_aim_fov", Min = 1, Max = 1000, Default = 120})
FOVSection:Slider({Name = "FOV Sides", Flag = "silent_aim_fov_sides", Min = 3, Max = 90, Default = 18})

--// Misc
local Autobuy = Misc:Section({Name = "Shop", Side = "left"})
Autobuy:Dropdown({Name = "Guns", Flag = "autobuy_Guns", Options = {"[Revolver] - $1339", "[Double-Barrel SG] - $1442", "[Shotgun] - $1288", "[TacticalShotgun] - $1751", "[Knife] - $155", "[RPG] - $6180", "[AK47] - $2318"}, Default = "[Revolver] - $1339"})
Autobuy:Button({Name = "Buy Selected", Callback = function()
    -- This part of the code needs the buyWeapon function defined below
end})

local C = Misc:Section({Name = "Checks", Side = "right"})
C:Toggle({Name = "Wallbang", Flag = "wALLBANG", Default = false, Callback = function(value)
    -- This part needs the DaHood table defined below
end})
C:Toggle({Name = "Rapidfire", Flag = "Rapidfireeee", Default = false})

--// playerlist
local PlayerList = PlayersTab:PlayerList({})

Library:Notify({Name = "Loaded successfully!", Duration = 3, Color = Library.accent})

